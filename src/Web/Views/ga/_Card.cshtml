@using EventManagement.Web.Data.Models
@model EventManagement.Web.Data.Models.EventDetails;
@{
    var card = ViewData["card"] as Speaker;
}

<section id="hero" class="hero-section bg-ga-empty bg-cover window-height light-text">
    <div class="heading-block-card centered-block align-center">
        <div class="container">
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <img src=@($"/img/ga/cards/card-{card?.Id}.jpg") alt="@card?.Name" class="img-responsive" style="box-shadow: 0 5px 25px rgba(0, 0, 0, 0.5)">
                </div>
                <div class="col-sm-1"></div>
            </div>

            <div class="btns-container">
                <!-- <a href="https://www.meetup.com/azureheads/events/237850213/" class="btn btn-md">GET TICKETS</a> -->
                <ul>
                    <li>
                        <a class="btn btn-md btn-lg-size btn-green" target="_blank" href="/">More Info</a>
                        <a class="btn btn-md btn-lg-size" target="_blank" href="@Model.Configuration.RegistrationUrl">GET TICKETS</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>